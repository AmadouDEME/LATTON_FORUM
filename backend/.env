# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/forum-db

# Configuration JWT
JWT_SECRET=votre_secret_tres_long_et_complexe_ici
JWT_EXPIRES_IN=24h

# Configuration Email (example avec Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre@gmail.com
SMTP_PASS=votre_mot_de_passe_app
EMAIL_FROM=votre@gmail.com

# Configuration Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880

# Configuration CORS
CORS_ORIGIN=http://localhost:8080

# Configuration de sécurité
BCRYPT_SALT_ROUNDS=10
RESET_TOKEN_EXPIRE=3600000

# Configuration Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Clés API (à remplacer par vos propres clés)
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret